<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.quizapp.StartFragment"
        android:label="Quiz App"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_out_right"
            app:popExitAnim="@anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.example.quizapp.QuestionsFragment"
        android:label="Questions"
        tools:layout="@layout/fragment_questions">
        <action
            android:id="@+id/action_questionsFragment_to_winFragment"
            app:destination="@id/winFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_out_right"
            app:popExitAnim="@anim/slide_in_left"
            app:popUpTo="@id/questionsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_questionsFragment_to_gameOverFragment"
            app:destination="@id/gameOverFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_out_right"
            app:popExitAnim="@anim/slide_in_left"
            app:popUpTo="@id/questionsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/winFragment"
        android:name="com.example.quizapp.WinFragment"
        android:label="you win"
        tools:layout="@layout/fragment_win">
        <action
            android:id="@+id/action_winFragment_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:popUpTo="@id/questionsFragment" />
        <argument
            android:name="numCorrect"
            app:argType="integer" />
        <argument
            android:name="numWrong"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.example.quizapp.GameOverFragment"
        android:label="you loss"
        tools:layout="@layout/fragment_game_over">
        <action
            android:id="@+id/action_gameOverFragment_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:popUpTo="@id/questionsFragment" />
        <argument
            android:name="numCorrect"
            app:argType="integer" />
        <argument
            android:name="numWrong"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.quizapp.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.quizapp.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>